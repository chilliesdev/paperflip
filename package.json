    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.48.2",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "pdfjs-dist": "^5.4.624",
    "pouchdb-adapter-idb": "^9.0.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "rxdb": "^9.21.0",
    "rxjs": "^7.8.2",
    "swiper": "^8.4.7",
    "uuid": "^13.0.0"
